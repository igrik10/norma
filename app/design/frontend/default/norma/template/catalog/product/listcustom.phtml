<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>


<?php
   $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="category-products">
    <?php //echo $this->getToolbarHtml() ?>

    <?php foreach ($_productCollection as $_product): ?> 
		<div class="shortcut-wide">
			<div class="preview-img">
				<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(445); ?>" width="445" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
			</div>
			<div class="text">
				<h3><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></h3>
				<span class="time-cooking icon">120хв</span>
				<div class="ingredients">
					<h4>Складові</h4>
					<p><?php echo $_helper->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?></p>
				</div>
				<div class="cooking">
					<h4>Спосіб приготування</h4>
					<p><?php echo $_helper->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?></p>
				</div>
			</div>
			<div class="more">
				<?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
				<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped ?>" class="btn blue link-learn"><?php echo $this->__('Читати та замовити') ?></a>
			</div>
		</div>
    <?php endforeach; ?>


    <div class="toolbar-bottom custom-view">
        <p>&nbsp;</p>
		<?php echo $this->getToolbarHtml() ?>
		
    </div>
</div>
<?php endif; ?>